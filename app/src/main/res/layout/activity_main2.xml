<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/water"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1:"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:textSize="36sp"
        android:padding="16dp"
        android:id="@+id/step1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Drink at least 8 cups of water a day."
        android:id="@+id/eight_cups_water_text_view"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_below="@+id/step1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="150dp"
        android:layout_alignRight="@+id/step1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next1_button"
        android:background="#FF7043"
        android:padding="16dp"
        android:onClick="next1"
        android:layout_below="@+id/eight_cups_water_text_view"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>



</RelativeLayout>