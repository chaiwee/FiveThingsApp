<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ee5415.fivethingsapp.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/running"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:id="@+id/first_iamge_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Healthy Tips"
        android:textSize="48sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:background="#FF7043"
        android:padding="24dp"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:id="@+id/get_started_button"
        android:background="#FF7043"
        android:padding="16dp"
        android:onClick="getStarted"
        android:layout_above="@+id/recipe_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Healthy Recipe"
        android:id="@+id/recipe_button"
        android:background="#FF7043"
        android:padding="16dp"
        android:onClick="recipe"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />

</RelativeLayout>
